package acorn;

import static org.junit.Assert.assertArrayEquals;
import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class CalculatorTest {
	Calculator c = new Calculator();
	@Test
	void testAdd() {
		//fail("Not yet implemented");
		assertEquals(8, c.add(3, 5));
	}

	@Test
	void testSub() {
		//fail("Not yet implemented");
		assertEquals(-2, c.sub(3, 5));
	}

	@Test
	void testMul() {
		//fail("Not yet implemented");
		assertEquals(15, c.mul(3, 5));
	}

	@Test
	void testDiv() {
		//fail("Not yet implemented");
		assertEquals(5, c.div(15, 3));
	}
	@Test
	void testDivisor() {
	    int[] expectedArr = {1, 2, 3, 6};
	    int[] actualArr = c.divisor(6);
	    
	    // 각 값에 대해 별도의 assertEquals 호출
	    for (int i = 0; i < expectedArr.length; i++) {
	        assertEquals(expectedArr[i], actualArr[i]);
	    }
	}
}
